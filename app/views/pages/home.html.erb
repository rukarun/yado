<div>
  <%= form_tag(search_rooms_path, :method =>'get') do %>
    <%= text_field_tag :address, params[:address], placeholder:"エリア名を入力" %> 
    <%= submit_tag '検索'%>
  <% end %>

  <%= form_tag(search_rooms_path, :method =>'get') do %>
    <%= text_field_tag :keyword, params[:keyword], placeholder:"キーワードを入力" %> 
    <%= submit_tag '検索'%>
  <% end %>
</div>

<div>
  <h1>おすすめのエリア</h1>

  <%= link_to "東京", search_rooms_path(address:"東京") %>
  <%= link_to "大阪", search_rooms_path(address:"大阪") %>
  <%= link_to "京都", search_rooms_path(address:"京都") %>
  <%= link_to "札幌", search_rooms_path(address:"札幌") %>
</div>
