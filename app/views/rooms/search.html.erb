<h3>検索結果:<%= @rooms.count %>件</h3>
 
<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>住所</th>
      <th>料金</th>
    </tr>
  </thead>

  <tbody>
    <% if @rooms.present? %>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.room_image.attached? %>
              <%= image_tag room.room_image %>
            <% else %>
              <%= image_tag 'room_default.png' %>
            <% end %>
          </td>
          <td><%= link_to room.room_name, room_path(room.id) %></td>
          <td><%= room.address %></td>
          <td><%= room.price %></td>
        </tr>
      <% end %>
    <% else %>
      <p>検索結果はありません</p>
    <% end %>
  </tbody>
</table>
