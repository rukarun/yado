<h3>登録済みルーム一覧</h3>
 
<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.room_image.attached? %>
            <%= image_tag room.room_image %>
          <% else %>
            <%= image_tag 'room_default.png' %>
          <% end %>
        </td>
        <td><%= link_to room.room_name, room_path(room.id) %></td>
        <td><%= room.room_introduction %></td>
        <td><%= room.price %></td>
        <td><%= l room.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
