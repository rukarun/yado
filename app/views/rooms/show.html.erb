<%= link_to :back do %>
  <button>戻る</button>
<% end %>

<h3>ルーム詳細</h3>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>住所</th>
    </tr>
  </thead>

  <tbody>
    <%= form_with model: @room do |f| %>
      <tr>
        <td>
          <% if @room.room_image.attached? %>
            <%= image_tag @room.room_image %>
          <% else %>
            <%= image_tag 'room_default.png' %>
          <% end %>
        </td>
        <td><%= @room.room_name %></td>
        <td><%= @room.room_introduction %></td>
        <td><%= @room.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= form_with(model: @reservation, url: confirm_reservations_path(@reservation), local: true) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :room_id, value: @room.id %>

    <div class="col-md-6">
      <label>チェックイン</label>
      <%= f.date_field :start_date %>
    </div>
  
    <div class="col-md-6">
      <label>チェックアウト</label>
      <%= f.date_field :end_date %>
    </div>

    <div class="col-md-6">
      <label>人数</label>
      <%= f.number_field :people %>
    </div>
    
    <%= f.submit "この日程で予約する", class: "btn btn-danger btn-wide" %>    
  <% end %>
</div>
