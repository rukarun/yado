<h3>ルーム新規作成</h3>

<%= form_with model: @room, local: true  do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id%>

  <table>
    <tr>
      <th><%= f.label :room_name ,"ルーム名" %></th>
      <td><%= f.text_field :room_name %></td>
    </tr>

    <tr>
      <th><%= f.label :room_introduction ,"ルーム紹介" %></th>
      <td><%= f.text_field :room_introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <td><%= f.number_field :price %></td>
    </tr>

    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>

    <tr>
      <th><%= f.label :room_image ,"ルーム画像" %></th>
      <td><%= f.file_field :room_image %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録"%></li>
    </ul>
  </div>
<% end %>
